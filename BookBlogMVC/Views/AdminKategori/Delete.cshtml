@model BookBlogMVC.Models.Kategori

@{
    ViewBag.Title = "Kategori Sil";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h3>Bunu silmek istediğinize emin misiniz?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
           Kategori Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adi)
        </dd>

        <dt>
            Açıklama
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Aciklama)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Geri dön", "Index")
        </div>
    }
</div>
